<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComplexCalc">

    <Button
        android:id="@+id/changeCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple"
        android:tag="change"
        android:onClick="handleClick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
    />
    <EditText
        android:id="@+id/expression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="30sp"
        android:textAlignment="viewEnd"
        android:inputType="text"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/changeCalc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
    />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/calcButtons"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/seven"
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintWidth_percent="0.33"
                android:onClick="handleClick"
                android:tag="seven"
                android:text="7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/eight"
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintWidth_percent="0.33"
                android:onClick="handleClick"
                android:tag="eight"
                android:text="8"
                app:layout_constraintLeft_toRightOf="@id/seven"
                app:layout_constraintTop_toTopOf="@id/seven" />

            <Button
                android:id="@+id/nine"
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintWidth_percent="0.33"
                android:onClick="handleClick"
                android:tag="nine"
                android:text="9"
                app:layout_constraintLeft_toRightOf="@id/eight"
                app:layout_constraintTop_toTopOf="@id/seven" />

            <Button
                android:id="@+id/four"
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintWidth_percent="0.33"
                android:onClick="handleClick"
                android:tag="four"
                android:text="4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/seven" />

            <Button
                android:id="@+id/five"
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintWidth_percent="0.33"
                android:onClick="handleClick"
                android:tag="five"
                android:text="5"
                app:layout_constraintLeft_toRightOf="@id/four"
                app:layout_constraintTop_toTopOf="@id/four" />

            <Button
                android:id="@+id/six"
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintWidth_percent="0.33"
                android:onClick="handleClick"
                android:tag="six"
                android:text="6"
                app:layout_constraintLeft_toRightOf="@id/five"
                app:layout_constraintTop_toTopOf="@id/four" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/group32"
                android:layout_height="0dp"
                android:layout_width="0dp"
                app:layout_constraintHeight_percent="0.50"
                app:layout_constraintWidth_percent="0.66"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/four">

                <Button
                    android:id="@+id/one"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintWidth_percent="0.5"
                    android:onClick="handleClick"
                    android:tag="one"
                    android:text="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/two"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintWidth_percent="0.5"
                    android:onClick="handleClick"
                    android:tag="two"
                    android:text="2"
                    app:layout_constraintLeft_toRightOf="@id/one"
                    app:layout_constraintTop_toTopOf="@id/one" />

                <Button
                    android:id="@+id/zero"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintWidth_percent="1"
                    android:onClick="handleClick"
                    android:tag="zero"
                    android:text="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/one" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/three"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintWidth_percent="0.33"
                android:onClick="handleClick"
                android:tag="three"
                android:text="3"
                app:layout_constraintLeft_toRightOf="@id/group32"
                app:layout_constraintTop_toTopOf="@id/group32" />

            <Button
                android:id="@+id/dot"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:onClick="handleClick"
                android:tag="dot"
                android:text="."
                app:layout_constraintLeft_toRightOf="@id/group32"
                app:layout_constraintTop_toBottomOf="@id/three" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/operations"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintWidth_percent="0.40"
            app:layout_constraintLeft_toRightOf="@id/numbers"
            app:layout_constraintTop_toTopOf="@id/numbers">

            <Button
                android:id="@+id/div"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintWidth_percent="0.5"
                android:onClick="handleClick"
                android:tag="div"
                android:text="/"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/backspace"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintWidth_percent="0.5"
                android:onClick="handleClick"
                android:tag="backspace"
                android:text="@string/backspace"
                app:layout_constraintLeft_toRightOf="@id/div"
                app:layout_constraintTop_toTopOf="@id/div" />

            <Button
                android:id="@+id/mul"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintWidth_percent="0.5"
                android:onClick="handleClick"
                android:tag="mul"
                android:text="*"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/div" />

            <Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintWidth_percent="0.5"
                android:onClick="handleClick"
                android:tag="clear"
                android:text="C"
                app:layout_constraintLeft_toRightOf="@id/mul"
                app:layout_constraintTop_toTopOf="@id/mul" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/groupaddsub"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintWidth_percent="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clear">

                <Button
                    android:id="@+id/sub"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintWidth_percent="0.5"
                    android:onClick="handleClick"
                    android:tag="sub"
                    android:text="-"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/add"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintWidth_percent="0.5"
                    android:onClick="handleClick"
                    android:tag="add"
                    android:text="+"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sub" />

                <Button
                    android:id="@+id/result"
                    android:layout_height="0dp"
                    android:layout_width="0dp"
                    app:layout_constraintHeight_percent="1"
                    app:layout_constraintWidth_percent="0.5"
                    android:onClick="handleClick"
                    android:tag="result"
                    android:text="="
                    app:layout_constraintLeft_toRightOf="@id/add"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>